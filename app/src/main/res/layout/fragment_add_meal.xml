<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".AddMealFragment">

    <!-- Meal Name Input -->
    <EditText
        android:id="@+id/et_meal_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter meal name"
        android:inputType="text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Calories Input -->
    <EditText
        android:id="@+id/et_calories"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter calories"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/et_meal_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Save Button -->
    <Button
        android:id="@+id/btn_save_meal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Meal"
        app:layout_constraintTop_toBottomOf="@id/et_calories"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
